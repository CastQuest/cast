apiVersion: v1
kind: Secret
metadata:
  name: castquest-web-secrets
  namespace: castquest-prod
type: Opaque
stringData:
  # Database
  DATABASE_URL: "postgresql://user:password@postgres-host:5432/castquest_prod"
  REDIS_URL: "redis://redis-host:6379"
  
  # Blockchain RPC
  RPC_URL_MAINNET: "https://eth-mainnet.alchemyapi.io/v2/YOUR_KEY"
  RPC_URL_BASE: "https://base-mainnet.g.alchemy.com/v2/YOUR_KEY"
  
  # AI Provider Keys
  OPENAI_API_KEY: "sk-proj-xxxx"
  ANTHROPIC_API_KEY: "sk-ant-xxxx"
  
  # Storage
  AWS_ACCESS_KEY_ID: "AKIAXXXXXXXXXXXX"
  AWS_SECRET_ACCESS_KEY: "xxxxxxxxxxxxxxxx"
  
  # Auth
  NEXTAUTH_SECRET: "xxxxxxxxxxxx"
  JWT_SECRET: "xxxxxxxxxxxx"
  
  # Monitoring
  SENTRY_DSN: "https://xxxx@sentry.io/xxxxx"

---
# Create this secret before deploying:
# kubectl create secret generic castquest-web-secrets \
#   --from-literal=DATABASE_URL="postgresql://..." \
#   --from-literal=REDIS_URL="redis://..." \
#   --namespace castquest-prod
#
# Or apply this file after filling in real values:
# kubectl apply -f web-secrets.yaml
