{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "artifacts/**",
        ".vite/**"
      ]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "outputs": ["apps/web/.next/**", "!apps/web/.next/cache/**"]
    },
    "contracts#build": {
      "dependsOn": [],
      "outputs": ["packages/contracts/artifacts/**", "packages/contracts/typechain-types/**"]
    },
    "sdk#build": {
      "dependsOn": ["^build"],
      "outputs": ["packages/sdk/dist/**"]
    },
    "indexer#build": {
      "dependsOn": [],
      "outputs": ["packages/indexer/dist/**"]
    },
    "agents#build": {
      "dependsOn": [],
      "outputs": ["packages/agents/dist/**"]
    },
    "docs-site#build": {
      "dependsOn": [],
      "outputs": ["docs-site/dist/**", "docs-site/.vite/**"]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "typecheck": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
