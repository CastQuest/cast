{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "out/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "cache": false
  "pipeline": {
    "web#dev": {
      "dependsOn": [],
      "outputs": []
    },
    "web#build": {
      "dependsOn": [],
      "outputs": ["apps/web/.next/**"]
    },
    "contracts#build": {
      "dependsOn": [],
      "outputs": ["packages/contracts/artifacts/**"]
    },
    "sdk#build": {
      "dependsOn": [],
      "outputs": ["packages/sdk/dist/**"]
    },
    "bots#build": {
      "dependsOn": [],
      "outputs": []
    },
    "docs-site#build": {
      "dependsOn": [],
      "outputs": ["docs-site/.vite/**"]
    }
  }
}
